SELECT f.title,f.rating,c.name
FROM film
JOIN film_category 
 USING(film_id)
JOIN category 
 USING(category_id)
WHERE rating = 'pg-13' AND name='comedy';




SELECT count(*) AS rented ,i.film_id ,f.title
FROM rental
JOIN inventory 
	USING (inventory_id)
JOIN film 
	USING(film_id)
GROUP BY film_id
ORDER BY rented DESC
LIMIT 3;



SELECT c.first_name,c.last_name , co.country
FROM rental
JOIN inventory 
 USING(inventory_id)
JOIN film 
	USING (film_id)
JOIN film_category 
 USING(film_id)
JOIN category cat
	USING (category_id)
JOIN customer c
	USING (customer_id)
JOIN address 
	USING (address_id)
JOIN city 
	USING (city_id)
JOIN country co
	USING (country_id)
WHERE cat.name = 'sports' and co.country='india';






SELECT c.first_name,c.last_name , co.country
FROM rental
JOIN inventory 
 USING(inventory_id)
JOIN film f
	USING (film_id)
JOIN film_actor
	USING(film_id)
JOIN actor act
	USING(actor_id)
JOIN customer c
	USING (customer_id)
JOIN address 
	USING (address_id)
JOIN city 
	USING (city_id)
JOIN country co
	USING (country_id)
WHERE act.first_name= 'NICK' AND act.last_name='WAHLBERG' AND co.country='canada';




SELECT count(*)
FROM film f
JOIN film_actor
	USING(film_id)
JOIN actor act
	USING(actor_id)
WHERE act.first_name= 'SEAN' AND act.last_name='WILLIAMS'












